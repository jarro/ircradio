<?xml version="1.0" encoding="utf-8"?>
<resources>	
	<style name="text_dash_link.land">	        
		<item name="android:textSize">20sp</item>		
    </style>
    <style name="text_dash_shadow.land">	        
		<item name="android:textSize">20sp</item>		
    </style>
	<style name="text_dash_link">	
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_dash_link_text</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">25sp</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>		
		<item name="android:layout_gravity">left</item>
    </style>
    <style name="text_dash_shadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">25sp</item>
		<item name="android:paddingLeft">2dp</item>				
		<item name="android:paddingTop">1dp</item>
		<item name="android:layout_gravity">left</item>
    </style>    
    <style name="text_dash_nav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_dash_link_nav</item>        
		<item name="android:textSize">28sp</item>		
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>		
    </style>
	<style name="text_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">10dp</item>
    </style>
	<style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">15sp</item>
		<item name="android:paddingLeft">10dp</item>
    </style>
	<style name="text_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">15sp</item>
		<item name="android:paddingLeft">10dp</item>
    </style>   
	<style name="text_body_linkable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_link_text</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">15sp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
    </style>   
	<style name="text_section">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:background">@color/sectionheader_back</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">19sp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingTop">3dp</item>
		<item name="android:paddingBottom">3dp</item>
    </style>   
	<style name="text_body.white" parent="text_body">        
        <item name="android:textColor">@color/light_grey</item>        
    </style>
</resources>