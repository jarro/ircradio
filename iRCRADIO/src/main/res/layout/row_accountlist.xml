<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:id="@+id/content"
	android:paddingTop="13dp"
	android:paddingBottom="13dp"
	android:layout_height="wrap_content">
<ImageView android:id="@+id/statusIcon"  android:paddingLeft="40dp"  android:src="@drawable/bluesphere" android:layout_width="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="5dp" android:layout_height="wrap_content" android:layout_gravity="center_vertical">
</ImageView>
<TextView
	android:id="@+id/text1"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
    android:textAppearance="?attr/textAppearanceListItem"
	 ></TextView>
</LinearLayout>